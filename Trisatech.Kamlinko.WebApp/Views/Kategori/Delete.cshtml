@model Trisatech.Kamlinko.WebApp.ViewModels.KategoriViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "_AdminLayout";
}
<hr />
<div class="row">
    <div class="col-md-4">
        <p>Apakah yakin akan menghapus data ini?</p>
        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" class="form-control" />
            <div class="form-group">
                <label asp-for="Nama" class="control-label"></label>
                <input disabled asp-for="Nama" class="form-control" />
                <span asp-validation-for="Nama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deskripsi" class="control-label"></label>
                <input disabled asp-for="Deskripsi" class="form-control" />
                <span asp-validation-for="Deskripsi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Icon" class="control-label"></label>
                <input disabled asp-for="Icon" class="form-control" />
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Yes" class="btn btn-primary" />
                <a asp-action="Index" value="Cancel" class="btn btn-primary">Cancel</a>
            </div>
        </form>
    </div>
    </div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}